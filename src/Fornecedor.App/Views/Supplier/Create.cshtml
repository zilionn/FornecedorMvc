@model Fornecedor.App.ViewModels.SupplierViewModel

@{
    ViewData["Title"] = "Create Supplier";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" name="Address" value="@Model.Address" required />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("Index", "Suppliers")" class="btn btn-secondary">Cancel</a>
</form>